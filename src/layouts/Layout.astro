---
import Nav from "../components/Nav.astro";

interface Props {
	title?: string;
}

const { title = "blog.toof.jp" } = Astro.props;
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="https://toof.jp/icon.png" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<Nav />
        <slot />
		<hr>
		<footer>
			<p>This site uses Cloudflare Web Analytics.</p>
		</footer>
	</body>
</html>

<style is:global>
	html {
		font-family: sans-serif;
	}

	body {
		max-width: 600px;
		margin: 0 auto;
		padding: 16px 24px; 
	}

	img, video, iframe {
		max-width: 100%;
		height: auto;
		display: block;
	}
	
	pre.astro-code.github-dark {
		padding: 10px;
	}
</style>
